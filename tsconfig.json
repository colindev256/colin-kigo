{
	"compilerOptions": {
		"target": "es6",
		"jsx": "react",
		"module": "commonjs",
		"sourceMap": true,
		"experimentalDecorators": true,
		"outDir": "dist",
		"rootDir": "src",
		"watch": true,
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
	],
	"exclude": [
		"node_modules",
		"dist",
		"spec"
	],
	"lib": ["es2015", "es2017", "dom"]
}